{
    "res_defs": {
        "type": "list",
        "schema": {
            "type": "dict",
            "schema": {
                "role": {
                    "type": "string",
                    "required": true,
                    "allowed": ["bkr_server"]
                },
                "whiteboard": { "type": "string", "required": true },
                "job_group": { "type": "string", "required": false },
                "recipesets": {
                    "type": "list",
                    "schema": {
                         "anyof": [{
                             "type": "dict",
                             "schema": {
                                "distro": { "type": "string", "required": true },
                                "arch": { "type": "string", "required": false },
                                "variant": { "type": "string", "required": false },
                                "keyvalue": {
                                    "type": "list",
                                    "required": false,
                                    "schema": { "type": "string", "required": true }
                                },
                                "hostrequires": {
                                    "type": "list",
                                    "schema": {
                                        "anyof": [{
                                            "type": "dict",
                                            "schema": {
                                                "tag": { "type": "string", "required": true },
                                                "op": { "type": "string", "required": false },
                                                "value": { "type": ["integer", "string"], "required": false },
                                                "type": { "type": "string", "required": false }
                                            }
                                        },
                                        {
                                            "type": "dict",
                                            "schema": {
                                                "force": { "type": "string", "required": true }
                                            }
                                        }]
                                    }
                                },
                                "bkr_data": { "type": "string", "required": false },
                                "count": { "type": "integer", "required": false },
                                "ids": {
                                    "type": "list",
                                    "required": false,
                                    "schema": { "type": "string", "required": true }
                                }
                             }
                         }]
                    }
                }
            }
        }
    }
}

