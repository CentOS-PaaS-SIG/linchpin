            "type" : "object",
            "properties" : {
                "flavor": {
                    "type":"string"
                },
                "res_type": {
                    "type":"string",
                    "pattern":"os_server"
                },
                "image": {
                    "type":"string"
                },
                "count": {
                    "type":"number"
                },
                "keypair": {
                    "type":"string"
                },
		"fip_pool": {
		    "type":"string"
		}
            },
            "required":["flavor","res_type","image","count","keypair"]
        },
        "aws_ec2": {
            "type" : "object",
            "properties" : {
