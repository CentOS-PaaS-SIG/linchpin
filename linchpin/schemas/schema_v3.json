                "keypair": {
                    "type":"string"
                },
                "security_group": {
                    "type":"string"
                }
            },
            "required":["flavor","res_type","count","keypair"]
        },
        "bkr_server": {
             "type": "object",
             "properties": {
                 "job_group": {
                     "type": "string"
                 },
                 "recipesets": {
                     "type": "array",
                     "items": {
                         "oneOf": [{
                             "type": "object",
                             "properties": {
                                 "distro": {
                                     "type": "string"
                                 },
                                 "arches": {
