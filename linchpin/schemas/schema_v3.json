                                 },
                                 "hostrequire": {
                                     "type": "array"
                                 },
                                 "bkr_data": {
                                    "type": "object"
                                 },
                                 "count": {
                                    "type": "number"
                                 },
                                 "ids": {
                                     "type": "array"
                                 }
                             },
                             "required": ["distro"]
                         }]
                     }
                 }
             },
             "required": ["job_group", "recipesets"]
         },
